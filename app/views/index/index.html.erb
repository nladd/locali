<% @albums.each_with_index do |album, index| %>
<div class="row marketing">
  <div class="col-lg-12">
    <div id="carousel<%= index %>" class="carousel slide" data-ride="carousel" data-interval="3000">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <% album.photos.size.times do |k| %>
          <li data-target="#carousel<%= index %>" data-slide-to="<%= k %>" class="<%= "active" if k == 0 %>"></li>
        <% end %>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <% album.photos.each_with_index do |photo, k| %>
        <div class="item <%= "active" if k == 0 %>">
          <%= image_tag photo.image.url(:medium) %>
          <div class="carousel-caption"></div>
        </div>
        <% end %>
      </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#carousel<%= index %>" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel<%= index %>" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

</div>

<%= javascript_tag do %>
$(document).ready(function() {
  setTimeout(function(){ $("#carousel<%= index %>").carousel('pause'); }, 2500);
});
<% end %>
<% end %>
